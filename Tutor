                        <button
                          onClick={() => setMode(mode === 'casual' ? 'structured' : 'casual')}
                          className={`px-3 py-1 rounded-lg text-xs font-medium transition-colors ${
                            mode === 'casual' 
                              ? 'bg-blue-100 text-blue-700' 
                              : 'bg-purple-100 text-purple-700'
                          }`}
